#GC-ReflectionPick-Name {
    flex-direction: row;
    flex-wrap: nowrap;
}

#GC-ReflectionPick-Name Label {
    flex-grow: 0;
    flex-shrink: 0;
    align-self: center;
}

#GC-ReflectionPick-Name TextField {
    flex-grow: 1;
    flex-shrink: 1;
    margin-right: 0;
    padding-right: 0;
}

#GC-ReflectionPick-Name TextField TextInput {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}

#GC-ReflectionPick-Name #GC-ReflectionPick-Dropdown {
    width: 19px;
    height: 18px;
    flex-grow: 0;
    flex-shrink: 0;
    margin: 1px 3px 1px 0;
    background-color: var(--gc-color-list-head-default);
    border-color: var(--gc-color-border-default);
    border-width: 1px;
    border-left-width: 0;
    border-top-right-radius: var(--gc-common-border-radius);
    border-bottom-right-radius: var(--gc-common-border-radius);
}

#GC-ReflectionPick-Name #GC-ReflectionPick-Dropdown:hover {
    background-color: var(--gc-color-list-head-hover);
}